generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  //  url      = env("DATABASE_URL_PROD")
  url      = env("DATABASE_URL")
}

model User {
  id                Int         @id @default(sequence())
  email_hash        String      @unique
  name              String      @unique
  alias             String?
  secret            String      @unique
  profile_image_url String?
  created_at        DateTime    @default(now())
  updated_at        DateTime    @updatedAt
  communes          Commune[]
  Post              Post[]
  Moderator         Moderator[]
  Admin             Admin[]
}

model Commune {
  id          Int         @id @default(sequence())
  uuid        String      @unique
  name        String      @unique
  description String
  type        CommuneType @default(TEXT)
  is_private  Boolean     @default(false)
  is_banned   Boolean     @default(false)
  creator     User        @relation(fields: [creator_id], references: [id])
  creator_id  Int
  created_at  DateTime    @default(now())
  updated_at  DateTime    @updatedAt
  Post        Post[]
  Moderator   Moderator[]
}

model Post {
  id         Int      @id @default(sequence())
  uuid       String   @unique
  title      String
  content    String
  type       PostType @default(TEXT)
  is_private Boolean  @default(false)
  is_banned  Boolean  @default(false)
  creator    User     @relation(fields: [creator_id], references: [id], onDelete: Cascade)
  creator_id Int
  commune    Commune  @relation(fields: [commune_id], references: [id], onDelete: Cascade)
  commune_id Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Moderator {
  id         Int      @id @default(sequence())
  user       User     @relation(fields: [user_id], references: [id])
  user_id    Int
  commune    Commune  @relation(fields: [commune_id], references: [id])
  commune_id Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Admin {
  id         Int      @id @default(sequence())
  user       User     @relation(fields: [user_id], references: [id])
  user_id    Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

enum CommuneType {
  TEXT
  IMAGE
  VIDEO
  GIF
  MISC
}

enum PostType {
  TEXT
  IMAGE
  VIDEO
  GIF
  LINK
}
